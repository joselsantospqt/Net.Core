@model IEnumerable<Domain.Entidade.Usuario>
@using PetLabWeb.Models
@using Microsoft.AspNetCore.Identity;

@{
    var UserSign = SessionExtensionsHelp.GetObject<IdentityUser>(this.Context.Session, "UserSign");
    ViewData["Title"] = "Listar Médicos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Listar</h1>

<main class="page-content">

    <div class="profile-cover bg-dark"></div>

    <div class="row">
        <div class="col-12 d-flex justify-content-center mx-auto">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="mb-0">@ViewData["Title"]</h5>
                    <hr>

                    <div class="col-10 col-lg-9 col-xl-9 col-xxl-9 d-flex justify-content-between mx-auto">
                        <a asp-controller="Home" asp-action="Home">
                            <div>
                                <h5 class="border radius-10 p-3 primary-dc"><i class="bi bi-house-fill primary-dc"></i>Home</h5>
                            </div>
                        </a>
                        <a asp-controller="Agendamento" asp-action="Listar" asp-route-id="@UserSign.Id">
                            <div>
                                <h5 class="border radius-10 p-3 primary-dc"><i class="bi bi-card-checklist primary-dc"></i>Minhas Consultas</h5>
                            </div>
                        </a>
                    </div>

                    <div class="card shadow-none border">
                        <div class="card-body">
                            @*MEDICOS*@
                            <div class="card shadow-sm border-0 overflow-hidden">
                                <div class="card-body">
                                    <h5 class="mb-0">Médicos</h5>
                                    <hr>
                                    <div class="card shadow-none border">
                                        <div class="card-header">
                                            <h6 class="mb-0">Informação</h6>
                                        </div>
                                        <div class="card-body table-responsive">
                                            <table class="table table-striped table-hover">
                                                <thead class="table-warning">
                                                    <tr>
                                                        <th> #</th>
                                                        <th>@Html.DisplayNameFor(model => model.Nome)</th>
                                                        <th>@Html.DisplayNameFor(model => model.Sobrenome)</th>
                                                        <th>@Html.DisplayNameFor(model => model.Telefone)</th>
                                                        <th>@Html.DisplayNameFor(model => model.Cnpj)</th>
                                                        <th>@Html.DisplayNameFor(model => model.Email)</th>
                                                        <th>@Html.DisplayNameFor(model => model.TipoUsuario)</th>
                                                        <th>   </th>
                                                    </tr>
                                                </thead>
                                                <tbody>

                                                    @if (Model != null)
                                                        foreach (var item in Model)
                                                        {
                                                            <tr>
                                                                <td>
                                                                    <div class="custom-control custom-checkbox">
                                                                        @Html.Label("false", Model.ToList().IndexOf(item).ToString(), new { @class = "custom-control-label", @for = $"customCheck{Model.ToList().IndexOf(item).ToString()}" })
                                                                    </div>
                                                                </td>
                                                                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                                                                <td>@Html.DisplayFor(modelItem => item.Sobrenome)</td>
                                                                <td>@Html.DisplayFor(modelItem => item.Telefone)</td>
                                                                <td>@Html.DisplayFor(modelItem => item.Cnpj)</td>
                                                                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                                                <td> @Html.DisplayFor(modelItem => item.TipoUsuario)</td>
                                                                <td>
                                                                    @Html.ActionLink("", "Criar", "Agendamento", new { Id = item.Id, IdTutor = UserSign.Id }, new { @class = "bi-sharp bi-solid bi-plus yellow", data_toggle = "tooltip", title = "Novo Agendamento" })|
                                                                    @Html.ActionLink("", "DetalhesMedico", new { Id = item.Id }, new { @class = "bi-sharp bi-solid bi-inbox yellow", data_toggle = "tooltip", title = "Detalhes" })
                                                            </tr>
                                                        }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

</main>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
    </script>
}