@using PetLabWeb.Models
@using Microsoft.AspNetCore.Identity;
@{
    var UserSign = SessionExtensionsHelp.GetObject<IdentityUser>(this.Context.Session, "UserSign");
    var pessoaId = UserSign.Id;
    var pessoaEmail = UserSign.Email;
}
<!doctype html>
<html lang="pt-br" class="light-theme">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <environment include="Development">
        <link rel="icon" href="~/assets/img/favicon-32x32.png" type="image/png" />

        <!-- Bootstrap CSS -->
        <link href="~/assets/css/bootstrap.css" rel="stylesheet" />
        <link href="~/assets/css/bootstrap-extended.css" rel="stylesheet" />
        <link href="~/assets/css/style.css" rel="stylesheet" />
        <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.css" rel="stylesheet" />

    </environment>

    <environment exclude="Development">
        <link rel="icon" href="~/assets/img/favicon-32x32.png" type="image/png" />

        <!-- Bootstrap CSS -->
        <link href="~/assets/css/bootstrap.css" rel="stylesheet" />
        <link href="~/assets/css/bootstrap-extended.css" rel="stylesheet" />
        <link href="~/assets/css/style.css" rel="stylesheet" />
        <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.css" rel="stylesheet" />

    </environment>

    <title>Pet Lab Veterinária</title>
</head>

<body>


    <!--Inicio wrapper-->
    <div class="wrapper">
        <!--Inicio header-->
        <header class="top-header">
            <nav class="navbar navbar-expand gap-3">
                <div class="mobile-toggle-icon fs-3">
                    <i class="bi bi-list"></i>
                </div>

                <div class="top-navbar-right ms-auto">
                    <ul class="navbar-nav align-items-center">
                        <li class="nav-item search-toggle-icon">
                            <a class="nav-link" href="#">
                                <div class="">
                                    <i class="bi bi-search"></i>
                                </div>
                            </a>
                        </li>
                        <li class="nav-item dropdown dropdown-user-setting">
                            <a class="nav-link dropdown-toggle dropdown-toggle-nocaret" href="#" data-bs-toggle="dropdown">
                                <div class="user-setting d-flex align-items-center">
                                    <img src="~/assets/img/cover.png" class="user-img" alt="">
                                </div>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <a class="dropdown-item" asp-controller="Perfil" asp-action="Detalhes" asp-route-id="@pessoaId">
                                        <div class="d-flex align-items-center">
                                            <img src="~/assets/img/cover.png" alt="" class="rounded-circle" width="54" height="54">
                                            <div class="ms-3">
                                                <h6 class="mb-0 dropdown-user-name">@pessoaEmail</h6>
                                            </div>
                                        </div>
                                    </a>
                                </li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Perfil" asp-action="Detalhes" asp-route-id="@pessoaId">
                                        <div class="d-flex align-items-center">
                                            <div class=""><i class="bi bi-person yellow"></i></div>
                                            <div class="ms-3"><span>Ver o perfil</span></div>
                                        </div>
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Perfil" asp-action="Editar" asp-route-id="@pessoaId">
                                        <div class="d-flex align-items-center">
                                            <div class=""><i class="bi bi-gear yellow"></i></div>
                                            <div class="ms-3"><span>Editar perfil</span></div>
                                        </div>
                                    </a>
                                </li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Autenticacao" asp-action="Logoff">
                                        <div class="d-flex align-items-center">
                                            <div class=""><i class="bi bi-lock yellow"></i></div>
                                            <div class="ms-3"><span>Sair</span></div>
                                        </div>
                                    </a>
                                </li>
                            </ul>
                        </li>

                    </ul>
                </div>
            </nav>
        </header>
        <!--fim header-->
        <!--incio sidebar -->
        <aside class="sidebar-wrapper" data-simplebar="true">
            <div class="sidebar-header">
                <div>
                    <img src="~/assets/img/brand-logo-2.png" class="img-fluid w-75" alt="">
                </div>

                <div class="toggle-icon ms-auto">
                    <i class="bi bi-list"></i>
                </div>
            </div>
            <!--Navegação-->
            <ul class="metismenu" id="menu">

                <li>
                        <a asp-controller="Home" asp-action="Home">
                            @*<div class="fm-icon-box">*@
                            <div class="">
                                <i class="bi bi-house yellow"></i>
                            </div>
                            <div class="menu-title">Home</div>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Agendamento" asp-action="Listar" asp-route-id="@pessoaId">
                            <div class="">
                                <i class="bi bi-calendar yellow"></i>
                            </div>
                            <div class="menu-title">Agendamento</div>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Pet" asp-action="Listar" asp-route-id="@pessoaId">
                            <div class="">
                                <i class="bi bi-heart yellow"></i>
                            </div>
                            <div class="menu-title">Pets</div>
                        </a>
                    </li>

                @*<li class="menu-label">Sua área</li>
                    <li>

                        <div class="menu-title"> <i class="bi bi-person-lines"></i> Opções de perfil</div>

                        <ul>
                            <li>
                                <a class="dropdown-item" asp-controller="Perfil" asp-action="Detalhes" asp-route-id="@pessoaId"><i class="bi bi-person"></i>Ver perfil</a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-controller="Perfil" asp-action="Editar" asp-route-id="@pessoaId"><i class="bi bi-gear"></i>Editar perfil</a>
                            </li>
                        </ul>
                    </li>*@
                <li class="menu-label">Solicite ajuda</li>
                <li>
                    <a asp-controller="Perfil" asp-action="Medicos">
                        <div class="">
                            <i class="bi bi-people"></i>
                        </div>
                        <div class="menu-title">Ver Médicos</div>
                    </a>
                </li>

            </ul>
            <!--fim navegação-->
        </aside>

        <!--fim sidebar -->
        <!--inicio content-->
        <div class="bg-surface">
            @RenderBody()
        </div>


        <!--fim main-->

    </div>
    <!--fim wrapper-->

    <environment include="Development">
        <script src="~/assets/js/jquery.min.js" asp-fallback-src="~/assets/js/jquery.min.js" asp-fallback-test="window.jQuery"></script>
        <script src="~/assets/js/bootstrap.bundle.min.js" asp-fallback-src="~/assets/js/bootstrap.bundle.min.js" asp-fallback-test="window.jQuery"></script>
        <script src="~/assets/js/app.js" asp-fallback-src="~/assets/js/app.js" asp-fallback-test="window.jQuery"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/locales/bootstrap-datepicker.pt-BR.min.js"></script>

    </environment>
    <environment exclude="Development">
        <script src="~/assets/js/jquery.min.js" asp-fallback-src="~/assets/js/jquery.min.js" asp-fallback-test="window.jQuery"></script>
        <script src="~/assets/js/bootstrap.bundle.min.js" asp-fallback-src="~/assets/js/bootstrap.bundle.min.js" asp-fallback-test="window.jQuery"></script>
        <script src="~/assets/js/app.js" asp-fallback-src="~/assets/js/app.js" asp-fallback-test="window.jQuery"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/locales/bootstrap-datepicker.pt-BR.min.js"></script>

    </environment>



    @RenderSection("scripts", required: false)
</body>

</html>