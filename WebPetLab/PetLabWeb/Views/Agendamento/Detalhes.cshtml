@model Domain.Entidade.View.ViewModel
@using Microsoft.AspNetCore.Identity;
@using Domain.Entidade
@{
    ViewData["Title"] = "Detalhes Agendamento";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var UserSign = SessionExtensionsHelp.GetObject<IdentityUser>(this.Context.Session, "UserSign");
    var UsuarioPerfil = SessionExtensionsHelp.GetObject<ETipoUsuario>(this.Context.Session, "UsuarioPerfil");
    var pessoaId = UserSign.Id;
}

<main class="page-content">

    <div class="profile-cover bg-dark"></div>

    <div class="row">
        <div class="col-12 col-lg-8 d-flex justify-content-between mx-auto">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="mb-0">@ViewData["Title"]</h5>
                    <hr>
                    <div class="card shadow-none border">
                        <div class="card-header">
                            <h6 class="mb-0">INFORMAÇÃO DO AGENDAMENTO</h6>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-4">
                                    @Html.DisplayNameFor(model => model.Agendamento.Pet)
                                </dt>
                                <dd class="col-sm-8">
                                    @Html.DisplayFor(model => model.Pet.Nome)
                                </dd>
                                <dt class="col-sm-4">
                                    @Html.DisplayNameFor(model => model.Agendamento.MedicoResponsavel)
                                </dt>
                                <dd class="col-sm-8">
                                    @Html.DisplayFor(model => model.ListaMedicos.First(x => x.Id == Model.Agendamento.MedicoResponsavel.UsuarioId).Nome)
                                </dd>
                                <dt class="col-sm-4">
                                    @Html.DisplayNameFor(model => model.Agendamento.Data)
                                </dt>
                                <dd class="col-sm-8">
                                    @Html.DisplayFor(model => model.Agendamento.Data)
                                </dd>
                                <dt class="col-sm-4">
                                    @Html.DisplayNameFor(model => model.Agendamento.Status)
                                </dt>
                                <dd class="col-sm-8">
                                    @Html.DisplayFor(model => model.Agendamento.Status)
                                </dd>
                                <dt class="col-sm-4">
                                    @Html.DisplayNameFor(model => model.Agendamento.Comentario)
                                </dt>
                                <dd class="col-sm-8">
                                    @Html.DisplayFor(model => model.Agendamento.Comentario)
                                </dd>
                            </dl>
                            <div class="form-group d-flex justify-content-between">
                                <a asp-action="Listar" asp-route-id="@pessoaId" class="btn btn-primary"><i class="bi-sharp bi-solid bi-arrow-bar-left"></i></a>

                                @if (UsuarioPerfil == ETipoUsuario.Medico)
                                {
                                    <a asp-action="Detalhes" asp-controller="Pet" asp-route-id="@Model.Pet.Id" class="btn btn-warning">Abrir Detalhes do Pet</a>
                                }
                                else
                                {
                                    <a asp-action="DetalhesMedico" asp-controller="Perfil" asp-route-id="@Model.Agendamento.MedicoResponsavel.UsuarioId" class="btn btn-warning">Abrir Detalhes do Médico</a>
                                }
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</main>
