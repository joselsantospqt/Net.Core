@model Domain.Entidade.View.ViewModel
@using Domain.Entidade
@{
    ViewData["Title"] = "Listar Agendamento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<main class="page-content">

    <div class="profile-cover bg-dark"></div>

    <div class="row">
        <div class="col-12 d-flex justify-content-center mx-auto">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="mb-0">@ViewData["Title"]</h5>
                    <hr>

                    <div class="col-10 col-lg-9 col-xl-9 col-xxl-9 d-flex justify-content-between mx-auto">
                        <a asp-controller="Perfil" asp-action="Medicos">
                            <div>
                                <h5 class="border radius-10 p-3 primary-dc"><i class="bi bi-people-fill primary-dc"></i>Veterinários</h5>
                            </div>
                        </a>
                        <div>
                            <a asp-controller="Perfil" asp-action="Medicos">
                                <h5 class="border radius-10 p-3 primary-dc"><i class="bi bi-plus primary-dc"></i>Novo Agendamento</h5>
                            </a>
                        </div>
                    </div>

                    <div class="card shadow-none border">
                        <div class="card-body">
                            @*PETS*@
                            <div class="card shadow-sm border-0 overflow-hidden">
                                <div class="card-body">
                                    <h5 class="mb-0">@ViewData["Title"]</h5>
                                    <hr>
                                    <div class="card shadow-none border">
                                        <div class="card-header">
                                            <h6 class="mb-0">Informação</h6>
                                        </div>
                                        <div class="card-body">
                                            <table class="table table-striped table-hover">
                                                <thead class="table-warning">
                                                    <tr>
                                                        <th> #</th>
                                                        <th>
                                                            @Html.DisplayNameFor(model => model.Agendamentos.First().Data)
                                                        </th>
                                                        <th>
                                                            @Html.DisplayNameFor(model => model.Agendamentos.First().Status)
                                                        </th>
                                                        <th>
                                                            @Html.DisplayNameFor(model => model.Agendamentos.First().Comentario)
                                                        </th>
                                                        <th>
                                                            @Html.DisplayNameFor(model => model.Agendamentos.First().Pet)
                                                        </th>     
                                                        <th>
                                                            @Html.DisplayNameFor(model => model.Agendamentos.First().MedicoResponsavel)
                                                        </th>

                                                        <th></th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @if (Model != null)
                                                        @foreach (var item in Model.Agendamentos)
                                                        {
                                                    <tr>
                                                        <td>
                                                            <div class="custom-control">
                                                                @Html.Label("false", Model.Agendamentos.ToList().IndexOf(item).ToString(), new { @class = "custom-control-label", @for = $"customCheck{Model.Agendamentos.ToList().IndexOf(item).ToString()}" })
                                                            </div>
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Data)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Status)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Comentario)
                                                        </td>
                                                        <td> @Html.DisplayFor(modelItem => Model.ListaPets.Where(x => x.Id.Equals(item.Pet.PetId)).First().Nome)</td>
                                                        <td> @Html.DisplayFor(modelItem => Model.ListaMedicos.Where(x => x.Id.Equals(item.MedicoResponsavel.UsuarioId)).First().Nome)</td>
                                                        <td>
                                                            @Html.ActionLink("", "Editar", new { id = item.Id }, new { @class = "bi-sharp bi-solid bi-pen yellow", data_toggle = "tooltip", title = "Editar" }) |
                                                            @Html.ActionLink("", "Deletar", new { id = item.Id }, new { @class = "bi-sharp bi-solid bi-trash yellow", data_toggle = "tooltip", title = "Deletar" })|
                                                            @Html.ActionLink("", "Detalhes", new { id = item.Id }, new { @class = "bi-sharp bi-solid bi-inbox yellow", data_toggle = "tooltip", title = "Detalhes" })
                                                        </td>
                                                    </tr>
                                                        }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

</main>


<script type="text/javascript">
    $(function () {
        $('[data-toggle="tooltip"]').tooltip()
    })
</script>

