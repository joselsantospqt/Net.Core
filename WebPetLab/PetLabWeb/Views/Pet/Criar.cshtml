@model Domain.Entidade.Request.CreatePet
@using EnumsNET;
@using Domain.Entidade;

@{
    ViewData["Title"] = "Criar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="page-content">

    <div class="profile-cover bg-dark"></div>

    <div class="row">
        <div class="col-12 col-lg-12">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <div class="card shadow-none border">
                        <div class="card-header">
                            <h6 class="mb-0">CRIAR PET</h6>
                        </div>
                        <div class="card-body">
                            <form asp-action="Criar" method="post" enctype="multipart/form-data" class="row g-3">
                                <div class="col-md-6 col-sm-12">
                                    <div class="form-group">
                                        <label asp-for="Nome" class="control-label"></label>
                                        <input asp-for="Nome" class="form-control" />
                                        <span asp-validation-for="Nome" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="DataNascimento" class="form-label">Data Nascimento</label>
                                        <input type="datetime" asp-for="DataNascimento" name="DataNascimento" class="form-control datepicker">
                                        <span asp-validation-for="DataNascimento" class="text-danger"></span>
                                    </div>
                                    <br />
                                    <div class="form-group">
                                        <p class="form-label">Selecione o tipo de espécie:</p>
                                        <label asp-for="Especie" class="form-label p-2">@ETipoEspecie.Anfibios.GetDescription():</label>
                                        @Html.RadioButton("Especie", ETipoEspecie.Anfibios, false)
                                        <br />
                                        <label asp-for="Especie" class="form-label p-2">@ETipoEspecie.Aves.GetDescription():</label>
                                        @Html.RadioButton("Especie", ETipoEspecie.Aves, false)
                                        <br />
                                        <label asp-for="Especie" class="form-label p-2">@ETipoEspecie.Invertebrados.GetDescription():</label>
                                        @Html.RadioButton("Especie", ETipoEspecie.Invertebrados, false)
                                        <br />
                                        <label asp-for="Especie" class="form-label p-2">@ETipoEspecie.Mamiferos.GetDescription():</label>
                                        @Html.RadioButton("Especie", ETipoEspecie.Mamiferos, false)
                                        <br />
                                        <label asp-for="Especie" class="form-label p-2">@ETipoEspecie.Vermiforme.GetDescription():</label>
                                        @Html.RadioButton("Especie", ETipoEspecie.Vermiforme, false)
                                        <br />
                                        <label asp-for="Especie" class="form-label p-2">@ETipoEspecie.Nao_Vermiforme.GetDescription():</label>
                                        @Html.RadioButton("Especie", ETipoEspecie.Nao_Vermiforme, false)
                                        <br />
                                        <label asp-for="Especie" class="form-label p-2">@ETipoEspecie.Peixes.GetDescription():</label>
                                        @Html.RadioButton("Especie", ETipoEspecie.Peixes, false)
                                        <br />
                                        <label asp-for="Especie" class="form-label p-2">@ETipoEspecie.Repteis.GetDescription():</label>
                                        @Html.RadioButton("Especie", ETipoEspecie.Repteis, false)

                                        <span asp-validation-for="Especie" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="ImagemUrlPet" class="col-sm-12 col-form-label">Foto do Pet:</label>
                                        <div class="col-sm-12">
                                            <input type="file" asp-for="ImagemUrlPet" name="ImagemUrlPet" class="form-control">
                                        </div>
                                        <br />
                                    </div>
                                    <input type="submit" value="Salvar" class="btn btn-primary" />
                                </div>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <!--fim row-->

</main>
<!--fim main-->

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">

        $(".datepicker").datepicker({
            format: "dd/mm/yyyy",
            language: "pt-BR"
        });
    </script>
}
