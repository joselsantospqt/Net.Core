@model IEnumerable<Domain.Entidade.Pet>
@using EnumsNET
@using Domain.Entidade
@using Microsoft.AspNetCore.Identity;
@{
    var UserSign = SessionExtensionsHelp.GetObject<IdentityUser>(this.Context.Session, "UserSign");
    var pessoaId = UserSign.Id;
    ViewData["Title"] = "Listar Pets";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Listar</h1>

<main class="page-content">

    <div class="profile-cover bg-dark"></div>

    <div class="row">
        <div class="col-12 d-flex justify-content-center mx-auto">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="mb-0">@ViewData["Title"]</h5>
                    <hr>

                    <div class="col-10 col-lg-9 col-xl-9 col-xxl-9 d-flex justify-content-between mx-auto">
                        <a asp-controller="Perfil" asp-action="Medicos">
                            <h5 class="border radius-10 p-3 primary-dc"><i class="bi bi-people-fill primary-dc"></i>Veterinários</h5>

                        </a>
                        <a asp-controller="Agendamento" asp-action="Listar" asp-route-id="@pessoaId">
                            <h5 class="border radius-10 p-2 primary-dc"><i class="bi bi-card-checklist primary-dc"></i>Minhas Consultas</h5>
                        </a>
                        <a asp-controller="Pet" asp-action="Criar">
                            <h5 class="border radius-10 p-3 primary-dc"><i class="bi bi-plus primary-dc"></i>Novo Pet</h5>
                        </a>
                    </div>

                    <div class="card shadow-none border">
                        <div class="card-body">
                            @*PETS*@
                            <div class="card shadow-sm border-0 overflow-hidden">
                                <div class="card-body">
                                    <h5 class="mb-0">@ViewData["Title"]</h5>
                                    <hr>
                                    <div class="card shadow-none border">
                                        <div class="card-header">
                                            <h6 class="mb-0">Informação</h6>
                                        </div>
                                        <div class="card-body table-responsive">
                                            <table class="table table-striped table-hover">
                                                <thead class="table-warning">
                                                    <tr>
                                                        <th> #</th>
                                                        <th>@Html.DisplayNameFor(model => model.Nome)</th>
                                                        <th>@Html.DisplayNameFor(model => model.DataNascimento)</th>
                                                        <th>@Html.DisplayNameFor(model => model.Especie)</th>
                                                        <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
                                                        <th>@Html.DisplayNameFor(model => model.UpdatedAt)</th>
                                                        <th>   </th>
                                                    </tr>
                                                </thead>
                                                <tbody>

                                                    @if (Model != null)
                                                        foreach (var item in Model)
                                                        {
                                                            <tr>
                                                                <td>
                                                                    <div class="custom-control">
                                                                        @Html.Label("false", Model.ToList().IndexOf(item).ToString(), new { @class = "custom-control-label", @for = $"customCheck{Model.ToList().IndexOf(item).ToString()}" })
                                                                    </div>
                                                                </td>
                                                                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                                                                <td> @Html.DisplayFor(modelItem => item.DataNascimento)</td>
                                                                <td> @Html.DisplayFor(modelItem => item.Especie)</td>
                                                                <td> @Html.DisplayFor(modelItem => item.CreatedAt)</td>
                                                                <td> @Html.DisplayFor(modelItem => item.UpdatedAt)</td>
                                                                <td>
                                                                    @Html.ActionLink("", "Editar", new { id = item.Id }, new { @class = "bi-sharp bi-solid bi-pen yellow", data_toggle = "tooltip", title = "Editar" }) |
                                                                    @Html.ActionLink("", "Deletar", new { id = item.Id }, new { @class = "bi-sharp bi-solid bi-trash yellow", data_toggle = "tooltip", title = "Deletar" })|
                                                                    @Html.ActionLink("", "Detalhes", new { id = item.Id }, new { @class = "bi-sharp bi-solid bi-inbox yellow", data_toggle = "tooltip", title = "Detalhes" })
                                                            </tr>
                                                        }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

</main>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
    </script>
}
