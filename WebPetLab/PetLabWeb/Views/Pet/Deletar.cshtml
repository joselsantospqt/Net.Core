@model Domain.Entidade.Pet
@using EnumsNET
@using Domain.Entidade
@{
    ViewData["Title"] = "Deletar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="page-content">

    <div class="profile-cover bg-dark"></div>

    <div class="row">
        <div class="col-12 col-lg-8 d-flex justify-content-between mx-auto">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="mb-0">Deletar Pet</h5>
                    <hr>
                    <div class="card shadow-none border">
                        <div class="card-header">
                            <h6 class="mb-0">INFORMAÇÃO DO PET</h6>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Id)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Id)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Nome)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Nome)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.DataNascimento)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.DataNascimento)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => Model.Especie)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Especie)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.ImagemUrlPet)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.ImagemUrlPet)
                                </dd>
                            </dl>

                            <form asp-action="DeletarPet" method="post">
                                <label asp-for="Id" class="control-label d-none"></label>
                                <input asp-for="Id" name="Id" value="@Model.Id" class="form-control d-none" readonly />
                                <span asp-validation-for="Id" class="text-danger d-none"></span>
                                <input type="submit" value="Deletar" class="btn btn-danger" /> |
                                <a asp-action="Listar" asp-route-id="@Model.Tutor.UsuarioId">Back to List</a>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</main>

