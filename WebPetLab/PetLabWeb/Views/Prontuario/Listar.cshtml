@model Domain.Entidade.View.ViewModel
@using Domain.Entidade
@using EnumsNET;
@using Microsoft.AspNetCore.Identity;
@{
    ViewData["Title"] = "Listar Prontuários";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var UserSign = SessionExtensionsHelp.GetObject<IdentityUser>(this.Context.Session, "UserSign");
    var pessoaId = UserSign.Id;
}


<main class="page-content">

    <div class="profile-cover bg-dark"></div>

    <div class="row">
        <div class="col-12 d-flex justify-content-center mx-auto">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="mb-0">@ViewData["Title"]</h5>
                    <hr>

                    <div class="col-10 col-lg-9 col-xl-9 col-xxl-9 d-flex justify-content-between mx-auto">
                        <a asp-controller="Perfil" asp-action="Medicos">
                            <div>
                                <h5 class="border radius-10 p-3 primary-dc"><i class="bi bi-people-fill primary-dc"></i>Veterinários</h5>
                            </div>
                        </a>
                        <div>
                            <a asp-controller="Agendamento" asp-action="Listar" asp-route-id="@pessoaId">
                                <h5 class="border radius-10 p-3 primary-dc"><i class="bi bi-plus primary-dc"></i>Novo Agendamento</h5>
                            </a>
                        </div>
                    </div>

                    <div class="card shadow-none border">
                        <div class="card-body">
                            @*PETS*@
                            <div class="card shadow-sm border-0 overflow-hidden">
                                <div class="card-body">
                                    <h5 class="mb-0">@ViewData["Title"]</h5>
                                    <hr>
                                    <div class="card shadow-none border">
                                        <div class="card-header">
                                            <h6 class="mb-0">Informação</h6>
                                        </div>
                                        <div class="card-body">
                                            <table class="table table-striped table-hover">
                                                <thead class="table-warning">

                                                    <tr>
                                                        <th> #</th>
                                                        <th>
                                                            @Html.DisplayNameFor(model => model.Prontuario.Resumo)
                                                        </th>
                                                        <th>
                                                            @Html.DisplayNameFor(model => model.Prontuario.Descricao)
                                                        </th>
                                                        <th>
                                                            @Html.DisplayNameFor(model => model.Prontuario.Data)
                                                        </th>
                                                        <th>
                                                            @Html.DisplayNameFor(model => model.Prontuario.Pet)
                                                        </th>
                                                        <th>
                                                            @Html.DisplayNameFor(model => model.Prontuario.Medico)
                                                        </th>
                                                        <th></th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @if (Model.Prontuarios != null && Model.Prontuarios.Count() > 0)
                                                    {
                                                        @foreach (var item in Model.Prontuarios)
                                                        {
                                                            <tr>
                                                                <td>
                                                                    @Html.Label("false", Model.Prontuarios.ToList().IndexOf(item).ToString(), new { @class = "custom-control-label", @for = $"customCheck{Model.Prontuarios.ToList().IndexOf(item).ToString()}" })
                                                                </td>
                                                                <td>
                                                                    @Html.DisplayFor(modelItem => item.Resumo)
                                                                </td>
                                                                <td>
                                                                    @Html.DisplayFor(modelItem => item.Descricao)
                                                                </td>
                                                                <td>
                                                                    @Html.DisplayFor(modelItem => item.Data)
                                                                </td>
                                                                <td> @Html.DisplayFor(modelItem => Model.ListaPets.Where(x => x.Id.Equals(item.Pet.PetId)).First().Nome)</td>
                                                                <td> @Html.DisplayFor(modelItem => Model.ListaMedicos.Where(x => x.Id.Equals(item.Medico.UsuarioId)).First().Nome)</td>
                                                                <td>
                                                                    @Html.ActionLink("", "Editar", new { id = item.Id }, new { @class = "bi-sharp bi-solid bi-pen yellow", data_toggle = "tooltip", title = "Editar" }) |
                                                                    @Html.ActionLink("", "Deletar", new { id = item.Id }, new { @class = "bi-sharp bi-solid bi-trash yellow", data_toggle = "tooltip", title = "Deletar" })|
                                                                    @Html.ActionLink("", "Detalhes", new { id = item.Id }, new { @class = "bi-sharp bi-solid bi-inbox yellow", data_toggle = "tooltip", title = "Detalhes" })
                                                                </td>
                                                            </tr>
                                                        }
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

</main>


<script type="text/javascript">
    $(function () {
        $('[data-toggle="tooltip"]').tooltip()
    })
</script>