@model IEnumerable<Domain.Entidade.Documento>
@using Microsoft.AspNetCore.Identity;
@{
    var UserSign = SessionExtensionsHelp.GetObject<IdentityUser>(this.Context.Session, "UserSign");
    var pessoaId = UserSign.Id;
    ViewData["Title"] = "Listar Documentos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="page-content">

    <div class="profile-cover bg-dark"></div>

    <div class="row">
        <div class="col-12 d-flex justify-content-center mx-auto">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="mb-0">@ViewData["Title"]</h5>
                    <hr>

                    <div class="col-10 col-lg-9 col-xl-9 col-xxl-9 d-flex justify-content-between mx-auto">
                        <a asp-controller="Pet" asp-action="Listar" asp-route-id="@pessoaId">
                            <div>
                                <h5 class="border radius-10 p-3 primary-dc"><i class="bi bi-people-fill primary-dc"></i>Meus Pets</h5>
                            </div>
                        </a>
                        <a asp-controller="Perfil" asp-action="Detalhes" asp-route-id="@pessoaId">
                            <div>
                                <h5 class="border radius-10 p-3 primary-dc"><i class="bi bi-person primary-dc"></i>Visão Geral</h5>
                            </div>
                        </a>
                        <div>
                            <a asp-controller="Documento" asp-action="Criar" asp-route-id="@pessoaId">
                                <h5 class="border radius-10 p-3 primary-dc"><i class="bi bi-plus primary-dc"></i>Novo Documento</h5>
                            </a>
                        </div>
                    </div>

                    <div class="card shadow-none border">
                        <div class="card-body">
                            @*PETS*@
                            <div class="card shadow-sm border-0 overflow-hidden">
                                <div class="card-body">
                                    <h5 class="mb-0">Documentos</h5>
                                    <hr>
                                    <div class="card shadow-none border">
                                        <div class="card-header">
                                            <h6 class="mb-0">Informação</h6>
                                        </div>
                                        <div class="card-body">
                                            <table class="table table-striped table-hover">
                                                <thead class="table-warning">
                                                    <tr>
                                                        <th> #</th>
                                                        <th>
                                                            @Html.DisplayNameFor(model => model.Nome)
                                                        </th>
                                                        <th>
                                                            @Html.DisplayNameFor(model => model.Descricao)
                                                        </th>
                                                        <th>
                                                            @Html.DisplayNameFor(model => model.Quantidade)
                                                        </th>
                                                        <th>
                                                            @Html.DisplayNameFor(model => model.TipoDocumento)
                                                        </th>
                                                        <th>
                                                            @Html.DisplayNameFor(model => model.Anexo)
                                                        </th>
                                                        <th>
                                                            @Html.DisplayNameFor(model => model.TipoAnexo)
                                                        </th>
                                                        <th>
                                                            @Html.DisplayNameFor(model => model.DataInicio)
                                                        </th>
                                                        <th>
                                                            @Html.DisplayNameFor(model => model.DataFim)
                                                        </th>
                                                        <th></th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @if (Model != null)
                                                        @foreach (var item in Model)
                                                        {
                                                            <tr>
                                                                <td>
                                                                    @Html.Label("false", Model.ToList().IndexOf(item).ToString(), new { @class = "custom-control-label", @for = $"customCheck{Model.ToList().IndexOf(item).ToString()}" })
                                                                </td>
                                                                <td>
                                                                    @Html.DisplayFor(modelItem => item.Nome)
                                                                </td>
                                                                <td>
                                                                    @Html.DisplayFor(modelItem => item.Descricao)
                                                                </td>
                                                                <td>
                                                                    @Html.DisplayFor(modelItem => item.Quantidade)
                                                                </td>
                                                                <td>
                                                                    @Html.DisplayFor(modelItem => item.TipoDocumento)
                                                                </td>
                                                                <td>
                                                                    @Html.DisplayFor(modelItem => item.Anexo)
                                                                </td>
                                                                <td>
                                                                    @Html.DisplayFor(modelItem => item.TipoAnexo)
                                                                </td>
                                                                <td>
                                                                    @Html.DisplayFor(modelItem => item.DataInicio)
                                                                </td>
                                                                <td>
                                                                    @Html.DisplayFor(modelItem => item.DataFim)
                                                                </td>
                                                                <td>
                                                                    @Html.ActionLink("", "Editar", new { id = item.Id }, new { @class = "bi-sharp bi-solid bi-pen yellow", data_toggle = "tooltip", title = "Editar" }) |
                                                                    @Html.ActionLink("", "Deletar", new { id = item.Id }, new { @class = "bi-sharp bi-solid bi-trash yellow", data_toggle = "tooltip", title = "Deletar" })|
                                                                    @Html.ActionLink("", "Detalhes", new { id = item.Id }, new { @class = "bi-sharp bi-solid bi-inbox yellow", data_toggle = "tooltip", title = "Detalhes" })
                                                                </td>
                                                            </tr>
                                                        }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

</main>


<script type="text/javascript">
    $(function () {
        $('[data-toggle="tooltip"]').tooltip()
    })
</script>