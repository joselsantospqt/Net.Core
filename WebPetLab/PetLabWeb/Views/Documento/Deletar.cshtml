@model Domain.Entidade.Documento

@{
    ViewData["Title"] = "Deletar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="page-content">

    <div class="profile-cover bg-dark"></div>

    <div class="row">
        <div class="col-12 col-lg-8 d-flex justify-content-between mx-auto">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="mb-0">@ViewData["Title"]</h5>
                    <hr>
                    <div class="card shadow-none border">
                        <div class="card-header">
                            <h6 class="mb-0">INFORMAÇÃO DO DOCUMENTO</h6>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Id)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Id)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Nome)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Nome)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Descricao)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Descricao)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Quantidade)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Quantidade)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.TipoDocumento)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.TipoDocumento)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Anexo)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Anexo)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.TipoAnexo)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.TipoAnexo)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.DataInicio)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.DataInicio)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.DataFim)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.DataFim)
                                </dd>
                            </dl>
                            <form asp-action="Deletar" enctype="multipart/form-data" method="post">
                                <label asp-for="Id" class="control-label d-none"></label>
                                <input asp-for="Id" name="Id" value="@Model.Id" class="form-control d-none" readonly />
                                <span asp-validation-for="Id" class="text-danger d-none"></span>
                                <input type="submit" value="Deletar" class="btn btn-danger" />
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
