@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container">

    <div class="row">
        <div class="col-md-7 col-md-offset-2">
            <section>
                <img src="~/assets/img/Place-Your-Image-Here-(Double-Click-to-Edit).png" class="img-fluid" alt="" style="width: 70%;">
            </section>
        </div>
        <div class="col-md-5 pt-5">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h4>Criar Conta.</h4>
                <hr />
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Telefone"></label>
                    <input asp-for="Input.Telefone" class="form-control" />
                    <span asp-validation-for="Input.Telefone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                </br>
                <button type="submit" class="btn btn-primary">Register</button>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
