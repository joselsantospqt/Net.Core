@page
@model LoginModel
@using PetLabWeb.Models
@{
    ViewData["Title"] = "Log in";

    var message = SessionExtensionsHelp.GetObject<String>(this.HttpContext.Session, "Status");

}

<div class="container">
    <div class="row">
        <div class="col-md-7 col-md-offset-2">
            <section>
                <img src="~/assets/img/Place-Your-Image-Here-(Double-Click-to-Edit).png" class="img-fluid" alt="" style="width: 70%;">
            </section>
        </div>
        <div class="col-md-5 pt-5">

            <section>
                <form id="account" method="post">
                    <h1>@ViewData["Title"]</h1>
                    <hr />
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Log in</button>
                    </div>
                    <div class="form-group">
                        @*<p class="d-none">
                                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                            </p>
                            <p>*@
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Cadastrar novo usuário</a>
                        </p>
                        @*<p class="d-none">
                                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                            </p>*@
                        @{if (message != null)
                            {
                                <p class="text-warning">@message</p>
                            }
                        }
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
