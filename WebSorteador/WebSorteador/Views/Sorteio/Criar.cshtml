@model Domain.Entidades.Pessoa

@{
    ViewData["Title"] = "Criar";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var viewBagVariavel = ViewBag.status;
}

<h1>Criar</h1>

<h4>Pessoa</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Criar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" name="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group d-none">
                <label asp-for="Vitorias" class="control-label"></label>
                <input asp-for="Vitorias" name="Vitorias" class="form-control" value="0"/>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PartitionKey" class="control-label"></label>
                <input asp-for="PartitionKey" value="pessoa" name="PartitionKey" class="form-control" readonly />
                <span asp-validation-for="PartitionKey" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@{
    if (viewBagVariavel != null)
    {
        <div class="row"><p>Resultado :</p> @viewBagVariavel</div>
    }
}